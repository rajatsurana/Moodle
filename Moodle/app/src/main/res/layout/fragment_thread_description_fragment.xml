<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rajat.moodle.thread_description_fragment">

    <TextView
        android:id="@+id/title_thread_1"
        android:textSize="23dp"
        android:paddingTop="52dp"
        android:paddingLeft="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/thread_description_1"
        android:textSize="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:layout_below="@+id/title_thread_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/create_time_1"
        android:textSize="14dp"
        android:layout_below="@+id/thread_description_1"
        android:layout_alignParentLeft="true"
        android:paddingLeft="3dp"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/update_time_1"
        android:textSize="14dp"
        android:layout_below="@+id/create_time_1"
        android:paddingLeft="3dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView android:id="@android:id/list" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:layout_below="@+id/update_time_1"
        />


</RelativeLayout>
