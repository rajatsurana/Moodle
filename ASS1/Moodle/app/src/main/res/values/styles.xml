<resources>

    <!-- Base application theme. -->
    <style name="DialogTheme" parent="android:Theme.DeviceDefault.Dialog.MinWidth">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">@android:color/holo_red_dark</item>
        <item name="android:textColorSecondary">@android:color/holo_red_dark</item>
        <item name="colorControlActivated">@android:color/holo_red_dark</item>


    </style>

    <style name="tool" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="reg" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="reg.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="reg.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="splashscreen" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/splashstatus</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
